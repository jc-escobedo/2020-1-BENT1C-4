@{
    ViewData["Title"] = "Home";
}

@section Scripts
{
    <!-- Este condicional hace que dependiendo del valor que el controller pone en ViewBag.PrimerLogin se cargue o no el script para ser incorporado en la página. -->
    @if (ViewBag.PrimerLogin)
    {
        <script>
            // Este método de notify está definido en una librería que incorporamos al proyecto que se llama "notify.js"
            // Para más detalles sobre dicha librería ver https://notifyjs.jpillora.com/
            $.notify("Hola @User.Identity.Name !!!", {
                className: "info",
                position: "top",
                showDuration: 800
            });
        </script>
    }

    <script>
        $('#test').datepicker({
            language: "es"
        });
    </script>
}
